window#waybar {
  background: transparent;
  color: #FFFFFF;
}

window > box {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  /*background-color: rgba(5,9,40,0.4);*/
}

* {
    font-family: "MartianMono Nerd Font";
    min-height: 28px;
    border-radius: 15px;
}

.modules-right, .modules-center {
    background-color: #000000;
    opacity: 0.6;
    color: white;
}

#custom-arch {
  background-color: #000000;
  font-size: 20px;
  opacity: 0.5;
  color: #FFFFFF;
  margin-right: 5px;
  padding-left: 0px;
  padding-right: 5px
}

#workspaces {
  border-radius: 2px;
  background-color: transparent;
  margin-left: 5px;
  margin-right: 5px;

}

#workspaces button {
  font-size: 22px;
  background: transparent;
  color: #FFFFFF;
}

#workspaces button.active {
  font-size: 22px;
  background: #333634;
  color: #FFFFFF;
  border-radius: 45px;
  opacity: 8;
}

#pulseaudio {
  font-size: 17px;
  background-color: transparent;
  color: #FFFFFF;
  padding-left: 10px;
  padding-right: 10px;
}

#network {
  font-size: 17px;
  background-color: transparent;
  color: #FFFFFF;
  padding-left: 10px;
  padding-right: 10px;
}

#clock {
  font-size: 17px;
  background-color: transparent;
  color:#FFFFFF;
  padding-left: 10px;
  padding-right: 10px;
  margin-right: 0px;
}

.custom-spotify {
    font-size: 17px;
    padding-left: 10px;
    padding-right: 15px;
    background-color: transparent;
    color: #FFFFFF;
}

#tray {
    font-size: 17px;
    background-color: transparent;
    color: #FFFFFF;
    padding-left: 10px;
    padding-right: 5px;
}

#memory {
    font-size: 17px;
    background-color: transparent;
    color: #FFFFFF;
    padding-left: 10px;
    padding-right: 10px;
}

